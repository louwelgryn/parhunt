<!-- <<<<<<< HEAD -->
<div class="landing-cover">
  <div class="text-centered">
   <h2 class= "main-title">Trouvez des parents à louer pour  <span class="typed"></span> </h2>
  </div>


  <button type="button" class="button-default turquoise" >
    <a data-scroll href="#scroll-to-all-parents">Voir les parents à louer</a>
  </button>
</div>

<div id="scroll-to-all-parents" class="index-container">
  <div class="half-container">

    <div class="row search-center">
      <%= form_tag couples_path, method: :get, class: "form-inline my-2 my-lg-0 search-flex" do %>
       <%= text_field_tag :query,
        params[:query],
          class: " form-control mr-sm-2",
          placeholder: "Find a couple"
        %>
       <%= submit_tag "Search", class: "button-default vert my-2 my-sm-0" %>
      <% end %>
    </div>

    <div class="row">
      <% @couples.each do |couple| %>
      <div class="col-6">
          <div class="card mb-8">
            <div class="card-photo-container">
             <%= cl_image_tag couple.photo, class: 'card-photo', height: 300, width: 400, crop: :fill %>
             <div class="middle">
              <span class="button-default turquoise">
                <%= link_to 'En savoir +', couple_path(couple) %>
              </span>
            </div>
          </div>


             <div class="card-info">
              <div class="card-info-content">

                <div class="double-info">
                  <div class="box-left">
                    <h4 class="strong">Les <%= couple.name %></h4>
                  </div>
                  <div class="box-right">
                    <p class="lighter">("<%= couple.nickname %>"")</p>
                  </div>
                </div>

<!-- <<<<<<< HEAD -->
                  <div class="card-trip-infos justify-content-center align-items-center">
                    <p class="description-couple">"<%= couple.description %>"</p>
                  </div>
              </div>


                <div class="card-info-footer">
                    <div class="double-info">
                      <div class="box-left">
                        <%= cl_image_tag couple.user.photo, crop: :fill,height: 40,  gravity: 'face', class: "card-user-photo avatar-bordered" %>
                        <h2><%= couple.price %> €</h2>
                      </div>
                      <div class="box-right">
                        <!-- <span class="button-default light-blue small"> -->
                          <div class="rating float-right">
                          <span><%= render partial: "average_stars", locals: { couple: couple } %></span>
                          </div>
                        <!-- </span> -->
                        <span class="bookings-count light-blue small"><%= couple.bookings.count %></span>
                      </div>
                  </div>
                </div>

              </div>

            </div>
          </div>
       <% end %>
      </div>
    </div>


    <div id="map"
      style="width: 100%;
      height: 100vh; position: sticky;
  top: 0; margin-left: 30px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
