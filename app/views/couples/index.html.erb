<div class="main-title-card">
  <h2 class= "title main-title">Trouvez des parents à louer pour <span class="typed"></span> </h2>
</div>

<div class="index-container">
  <div class="half-container">

    <div class="row">
      <% @couples.each do |couple| %>
      <div class="col-6">
          <div class="card-trip mb-8">
             <%= cl_image_tag couple.photo, id: 'cover-image', height: 300, width: 400, crop: :fill %>

              <div class="card-name">
                <h4 class="couple-name">Les <%= couple.name %> <p>(<%= couple.nickname %>)</p></h4>
                <div class="card-trip-infos justify-content-center align-items-center">
                  <p class="description-couple"><%= couple.description %></p>
                  <p class="description-couple"><%= couple.average %></p>
                </div>
              </div>

              <div class="couple-infos">
                <h2><%= couple.price %> €</h2>
                <span class="button-turquoise-light">
                  <%= link_to 'En savoir +', couple_path(couple) %>
                </span>
              </div>

              <%= cl_image_tag couple.user.photo, crop: :fill,height: 40,  gravity: 'face', class: "card-trip-user avatar-bordered" %>
            </div>
          </div>
       <% end %>
      </div>
    </div>


    <div id="map"
      style="width: 100%;
      height: 600px; position: sticky;
  top: 0; margin-left: 30px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
