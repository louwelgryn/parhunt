<div class="container" style= "text-align: center">
  <div class="booking-form" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for [@couple, @booking], wrapper: :inline_form,
  html: { class: "form-inline" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker start_date"}, label: "Début", placeholder: "Date début"%>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker end_date", data: {price: @couple.price}}, label: "Fin", placeholder: "Date fin" %>
  </div>
  <br>
  <%= f.button :submit, "Réserver", class: "button-default turquoise " %>
  <% end %>
</div>

