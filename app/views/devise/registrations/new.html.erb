<h2>Se créer un compte</h2>

<%= render "devise/shared/links" %>

<br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname,
                required: true,
                autofocus: true,
                input_html: { placeholder: "Votre nom" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { placeholder: "Votre email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { placeholder: "Mot de passe" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { placeholder: "Mot de passe" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Créer mon compte", class: "btn btn-primary" %>
  </div>
<% end %>
